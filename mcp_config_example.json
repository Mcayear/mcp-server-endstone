{
  "$schema": "https://github.com/modelcontextprotocol/specification/blob/main/schema/draft/schema.json",
  "description": "Example MCP client configuration for Endstone MCP Server",
  "mcpServers": {
    "endstone": {
      "command": "python",
      "args": ["C:/Users/Administrator/Desktop/endstone mcp/endstone_mcp_server.py"],
      "env": {
        "PYTHONPATH": "C:/Users/Administrator/Desktop/endstone mcp"
      }
    }
  },
  "examples": {
    "claude_desktop": {
      "description": "Configuration for Claude Desktop",
      "file_location": "%APPDATA%/Claude/claude_desktop_config.json",
      "config": {
        "mcpServers": {
          "endstone": {
            "command": "python",
            "args": ["C:/Users/Administrator/Desktop/endstone mcp/endstone_mcp_server.py"]
          }
        }
      }
    },
    "continue_dev": {
      "description": "Configuration for Continue.dev",
      "file_location": "~/.continue/config.json",
      "config": {
        "experimental": {
          "modelContextProtocol": true
        },
        "mcpServers": {
          "endstone": {
            "command": "python",
            "args": ["C:/Users/Administrator/Desktop/endstone mcp/endstone_mcp_server.py"]
          }
        }
      }
    },
    "cursor": {
      "description": "Configuration for Cursor IDE",
      "note": "Add to Cursor's MCP settings",
      "config": {
        "endstone": {
          "command": "python",
          "args": ["C:/Users/Administrator/Desktop/endstone mcp/endstone_mcp_server.py"]
        }
      }
    }
  },
  "usage_examples": {
    "queries": [
      "Show me all Player-related classes in Endstone",
      "Generate a plugin that handles player join events",
      "What events are available for block interactions?",
      "How do I create a custom command in Endstone?",
      "List all available Endstone modules",
      "Create a plugin template with event handling and commands",
      "Show me the exports from endstone.inventory module",
      "Search for all classes containing 'Block' in their name"
    ],
    "tools": [
      {
        "name": "get_module_info",
        "example": "Get information about endstone.event module",
        "parameters": {
          "module_name": "endstone.event"
        }
      },
      {
        "name": "search_exports",
        "example": "Find all Player-related exports",
        "parameters": {
          "query": "Player"
        }
      },
      {
        "name": "get_symbol_info",
        "example": "Get detailed definition of PlayerInteractEvent",
        "parameters": {
          "symbol_name": "PlayerInteractEvent"
        }
      },
      {
        "name": "generate_plugin_template",
        "example": "Create a plugin with events and commands",
        "parameters": {
          "plugin_name": "MyAwesome",
          "features": ["events", "commands"]
        }
      },
      {
        "name": "get_event_info",
        "example": "Get details about PlayerJoinEvent",
        "parameters": {
          "event_type": "PlayerJoinEvent"
        }
      }
    ],
    "prompts": [
      {
        "name": "plugin_development",
        "description": "Get comprehensive plugin development guide"
      },
      {
        "name": "event_handling",
        "description": "Learn about event handling patterns"
      },
      {
        "name": "command_creation",
        "description": "Guide for creating custom commands"
      }
    ]
  }
}